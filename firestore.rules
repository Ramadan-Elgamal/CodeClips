
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to submit a tutorial for review.
    // Allow any authenticated user to view submissions (for simplicity, can be locked down later).
    match /submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if false; // Only backend functions can delete.
    }

    // Users can only manage their own profile and data.
    match /users/{userId}/{document=**} {
      allow read, write, create, delete, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
