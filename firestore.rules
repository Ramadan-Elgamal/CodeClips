
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // The admin user has full access to submissions.
    // Any user can create a submission.
    match /submissions/{submissionId} {
      allow read, write: if request.auth != null && request.auth.uid == env.NEXT_PUBLIC_ADMIN_UID;
      allow create: if true;
    }

    // Users can only manage their own documents and subcollections.
    match /users/{userId}/{document=**} {
      allow read, write, create, delete, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
